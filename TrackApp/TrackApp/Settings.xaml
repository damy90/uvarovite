<Window x:Class="TrackApp.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="300">
    <Grid Margin="0,0,-28,0">
        <Label Content="Video Start" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,243"/>
        <Label Content="Trask Start" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.553,1.962" Margin="0,26,0,0"/>
        <Label Content="Video Length" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,52,0,0"/>
        <CheckBox Content="Enable distance meter" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,83,0,0"
                  Checked="Enable_Distance_Widget"/>
        <CheckBox Content="Enable speed meter" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-2,103,0,0"/>

    </Grid>
</Window>
